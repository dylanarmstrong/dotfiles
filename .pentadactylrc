" main
set runtimepath=~/.pentadactyl
loadplugins '\.(js|penta)$'

" options
set defsearch=d
set maxitems=9
" set hintkeys=alskdjfhg
set guioptions=TCs
set go+=n

set showtabline=always
set popups=tab,resized
set hlfind
set incfind
set findcase=smart

" fuck you bell
set noerrorbells
set novisualbell
javascript dactyl.beep = function() { return false; }

" theme
colorscheme solarized-light

" keybindings
map , <Leader>
map -ex <Leader>tm :set guioptions!=m
map -ex <Leader>tt :set guioptions!=T
map <Leader>d :dialog<space>
map -ex <Leader>dd :dialog downloads
map -ex <Leader>nn :nohlfind

nmap -builtin <silent> < :tabmove! -1<CR>
nmap -builtin <silent> > :tabmove! +1<CR>
nmap -builtin m :bmarks<space>
nmap -builtin v :tab viewsource<CR>
nmap -builtin y Y
nmap -builtin Y y
nmap -builtin j 5j
nmap -builtin k 5k

" noscript
:command ns-revoke -nargs=0
	\ :set nst=
	\ :echo "[no-script] temporary permissions have been revoked"

set noscript-list=address

" noscript sites
map -b <Leader>ss :set nss!=

" noscript tempsites
map -b <A-s> :set nst!=<A-Tab>
map -b <Leader>st :set nst!=

" list tempsites
map -b <Leader>sl :set nst<CR>

" remove tempsites
map -b <Leader>sr :ns-revoke<CR>

" noscript object
map -b <Leader>so :set nso!=<A-Tab>

" noscript untrusted
map -b <Leader>su :set nsu!=<A-Tab>

nmap -builtin ; :
nmap -builtin : ;

" vim: set ft=vim